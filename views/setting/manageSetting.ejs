<script>

    var vmMain = new Vue({
        el: '#main-container',
        data: {
            isTableLockProcessing: true,  //打API 上鎖程序是否正在執行
            usingPrgID: "",  //使用中的prg_id
            isTableLocked: false,// 是否被上鎖中
            tableLockMsg: "",// 上鎖訊息
            userInfo:<%- JSON.stringify(session.user || {}) %>
        },
        ready: function () {
            //偵測離開頁面
            $(window).on('beforeunload', function () {
                if (!_.isEmpty(vmMain.usingPrgID)) {
                    return vmMain.doTableUnLock();
                }

            });

            this.doFirstPrg();
        },
        watch: {},
        methods: {
            doFirstPrg: function () {
                this.loadSetUpPage('PMS0810010');
            },
            //讀取網頁程式頁面
            loadSetUpPage: function (this_prg_id) {
                var self = this;
                waitingDialog.show("Loading...");
//                //判斷是否要Unlock
                if (!_.isEmpty(this.usingPrgID) && !_.isEqual(this_prg_id, this.usingPrgID)) {
                    this.isTableLockProcessing = true;
                    this.doTableUnLock(function (errorMsg, success) {
                        this.isTableLockProcessing = false;
                        console.log("解開lock:" + this.usingPrgID);
                        vmMain.isTableLocked = false;
                    })
                }

                $("#prgContentDiv").empty();

                // Start
                // 把dialog 在div產生的html 刪除, 不然會導致另一個對照檔開錯dialog
                $(".panel.window").remove();
                $(".window-shadow").remove();
                $(".window-mask").remove();
                //End

                if (!_.isEmpty(this.usingPrgID) && _.isEqual(this_prg_id, this.usingPrgID)) {
                    $("#prgContentDiv").load('/mainSetUp/' + this_prg_id + "?_r=" + (new Date()).getTime());

                } else {
                    $("#prgContentDiv").load('/mainSetUp/' + this_prg_id + "?_r=" + (new Date()).getTime());
                    //TODO table lock 尚未修好
//                    this.isTableLockProcessing = true;
//                    this.doTableLock(this_prg_id, function (errorMsg, success) {
//                        if(success){
//                            console.log("鎖上lock:" +  this_prg_id);
//                        }else{
//                            console.error("有人用")
//                        }
//
//                        vmMain.isTableLocked = !success;
//                        vmMain.tableLockMsg = errorMsg;
//                        this.isTableLockProcessing = false;
//                        if (!vmMain.isTableLocked) {
//                            vmMain.usingPrgID = this_prg_id.trim();  //確實是此使用者鎖上的才能註冊這個prg_id
//                            $("#prgContentDiv").empty().load('/mainSetUp/' + this_prg_id);
//                        }else{
//                            vmMain.usingPrgID = "";
//                            waitingDialog.hide();
//                        }
//                    })
                }

            },
            //資料表上鎖
            doTableLock: function (prg_id, callback) {
                $.post("/api/dbTableLock", {prg_id: prg_id}, function (result) {
                    callback(result.errorMsg, result.success);
                })
            },
            //資料表解鎖
            doTableUnLock: function (callback) {
                $.post("/api/dbTableUnlock", {prg_id: vmMain.usingPrgID}, function (result) {
                    callback(result.errorMsg, result.success);
                })
            }


        }
    })


</script>
