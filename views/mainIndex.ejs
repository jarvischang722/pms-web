<!DOCTYPE html>
<html lang="en">

<%- include ./common/head %>

<%- include ./common/cssFile/importFiles_CssBase %>

<%- include ./common/jsFile/importFiles_JsBase %>
<body class="no-skin">

<div id="BacchusMainApp" class="main-container ace-save-state" style="margin-top: 35px;">

    <%- include ./common/navbar.ejs %>

    <div id="sidebar" class="sidebar responsive ace-save-state sidebar-fixed">
        <%- include ./common/moduleMenu.ejs %>
    </div>
    <div class="main-content">
        <div class="main-content-inner">
            <%- include ./common/subsysMenu.ejs %>
            <div id="MainContentDiv" class="page-content">
                <!-- 主內容 -->
                <div style=" margin: 0 auto; display: block; " align="center">
                    <img src="/images/initialPageImg.jpg" style="margin-top:-200px;opacity: 0.4" width="900"/>
                </div>
            </div>
        </div>
    </div>
    <%- include ./common/footer %>
    <a href="#" id="btn-scroll-up" class="btn-scroll-up btn btn-sm btn-inverse">
        <i class="ace-icon fa fa-angle-double-up icon-only bigger-110"></i>
    </a>
    <!-- 閒置太久強制登出提醒Dialog -->
    <el-dialog title="Warn" :visible.sync="displayLogoutDialog" width="50%" :before-close="doLogout">
        <span> <%= __("SystemWarn").Idle_auto_logout %></span>
        <span slot="footer" class="dialog-footer">
             <el-button type="primary" @click="doLogout"><%= __("SystemCommon").OK %></el-button>
        </span>
    </el-dialog>

    <!--修改密碼-->
    <div>
        <el-dialog
                :close-on-click-modal="true" style="width:50%; left:25%; right: 25%;"
                :visible.sync="openEditPasswordDialog" :before-close="doCancelEditPassword">
            <div class="loginPage">
                <div class="space-6"></div>
                <div class="login-container" style="background: #fff; border: 0px solid #fff;">
                    <div class="col-sm-12 col-xs-12">
                        <div class="row">
                            <div class="title">
                                <!--icon-->
                                <i class="ace-icon fa fa-key red"></i>
                                <span> EDIT PASSWORD</span>
                            </div>
                            <div class="main">
                                <h2>
                                    <i class="ace-icon fa fa-user"></i>
                                    m15009</h2>
                                <div>
                                    <div class="">Please verify your identity first.</div>

                                    <div class="block input-icon input-icon-right">
                                        <input type="password" class="form-control" placeholder="Original Password" v-model="oriPassword"/>
                                        <i class="ace-icon fa fa-lock"></i>
                                    </div>

                                    <div class="">Enter new password.</div>

                                    <div class="block input-icon input-icon-right">
                                        <input type="password" class="form-control" placeholder="New Password" v-model="newPassword"/>
                                        <i class="ace-icon fa fa-lock"></i>
                                    </div>

                                    <div class="">Check new password.</div>

                                    <div class="block input-icon input-icon-right">
                                        <input type="password" class="form-control" placeholder="New Password" v-model="confirmPassword"/>
                                        <i class="ace-icon fa fa-lock"></i>
                                    </div>

                                    <div class="clearfix"></div>

                                    <div class="mainCheck">
                                        <!--<label class="inline">-->
                                        <!--<a href="#" data-target="#forgot-box" class="forgot-password-link">-->
                                        <!--<i class="ace-icon fa fa-arrow-left"></i>-->
                                        <!--Forget Password？-->
                                        <!--</a>-->
                                        <!--</label>-->

                                        <button type="button" id="login_btn" class="width-35 pull-right btn btn-sm btn-primary"
                                                @click="confirmEditPassword">
                                            <span class="bigger-110"> Continue</span>
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="clearfix"></div>
                </div>
            </div>
        </el-dialog>
    </div>
</div>


</body>
<script src="/js/system/mainFramework.js"></script>
</html>

