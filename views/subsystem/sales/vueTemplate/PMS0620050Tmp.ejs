                                                    :style="{width:field.width + 'px' , height:field.height + 'px'}"
                                                    format="yyyy/MM/dd HH:mm:ss"
                                                    @change="chkFieldRule(field.ui_field_name,field.rule_func_name)">
                                    </el-date-picker>
                                </template>

                                <!-- 下拉選單 -->
                                <span class="dropdown margin-adjust" align="left"
