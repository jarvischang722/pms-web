<script type="text/javascript">
    $(function (){

        // 彈出SettingNewDialog
        $(document).on('click', ".changeCreditLimit", function (e) {
            e.preventDefault();
            var dialog = $("#changeCreditLimit-message").removeClass('hide').dialog({
                modal: true,
                title: "信用額度變更",
                title_html: true,
                width: 500,
                maxwidth: 1920,
//                autoOpen: true,
                dialogClass: "test",
                resizable: true
            });
        });


        // 業務員資料維護-查詢結果 dataGrid
        $('#clerkDataGridResult-table').datagrid({
            singleSelect:true,
            collapsible:true,
            // 從json 撈
            url:'/jsonData/bsCompany_clerkDataGridResult.json',
            method:'get',
            columns:[[
                {field:'clerkNum',title:'業務員代號',width:100},
                {field:'clerkName',title:'業務員姓名',width:100},
                {field:'ifStaff',title:'是否為員工',width:100},
                {field:'status',title:'狀態',width:100},
                {field:'disabledYear',title:'停用年月',width:100},
                {field:'clerkTeam',title:'業務員組別',width:100},
                {field:'hotelBusiness',title:'飯店業務',width:100},
                {field:'foodBusiness',title:'餐飲業務',width:100},
                {field:'memberBusiness',title:'會員業務',width:100}
            ]]

        });


        // 點選彈出提示視窗
        $('#gritter-center').on(ace.click_event, function(){
            $.gritter.add({
                title: 'This is a centered notification',
                text: 'Just add a "gritter-center" class_name to your $.gritter.add or globally to $.gritter.options.class_name',
                class_name: 'gritter-info gritter-RB '   // gritter-light
            });

            return false;
        });

        $('#gritter-error').on(ace.click_event, function(){
            $.gritter.add({
                title: 'This is a warning notification',
                text: 'Just add a "gritter-light" class_name to your $.gritter.add or globally to $.gritter.options.class_name',
                class_name: 'gritter-error gritter-light gritter-RB'
            });

            return false;
        });

        $("#gritter-remove").on(ace.click_event, function(){
            $.gritter.removeAll();
            return false;
        });
    });
</script>


