<link rel="stylesheet" href="/css/setup/gridSingle.css">
<div id="GSApp">
    <div class="col-xs-12">
        <div class="row">
            <label id="prg_Id" class="prg_idLbH3"><%= prg_id %></label>
        </div>
    </div>
    <input type="hidden" id="prg_id" value="<%= prg_id %>" style="border: 0px">
    <!--<div class="row" style="margin-left: -5px;">-->
    <div class="col-xs-12">
        <div class="col-sm-11 col-xs-11">
            <div class="row no-margin-right">
                <div class="" style="padding: 0; box-sizing: border-box; margin-left: -15px;">
                    <div style="float:left; min-width: 30px; max-width: 3%;">
                        <table id="dgCheckbox"></table>
                    </div>
                    <div style="float: left; max-width: 96%; width: 94%;">
                        <table id="PMS0810020_dg"></table>
                    </div>
                    <div class="clearfix"></div>
                </div>

            </div>
        </div>

        <div class="col-xs-1 col-sm-1">
            <div class="row">
                <div class="right-menu-co">
                    <ul>
                        <li>
                            <button id="ins-btn" @click="appendRow"
                                    class="btn btn-primary btn-white btn-defaultWidth"
                                    role="button">
                                <%= __("SystemCommon").Add %>
                            </button>
                        </li>

                        <li>
                            <button id="remove-btn" @click="removeRow"
                                    class="btn btn-danger btn-white btn-defaultWidth"
                                    role="button">
                                <%= __("SystemCommon").Delete %>
                            </button>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div> <!-- -->
    <!--</div>-->
    <div class="clearfix"></div>

    <single-grid-pms0810020-tmp
            @close-single-grid-dialog="closeSingleGridDialog"
            @append-row="appendRow"
            @fetch-single-data="fetchSingleData"
            @do-save-cud="doSaveCUD"
            :single-data="singleData"
            :page-two-field-data="pageTwoFieldData"
            :page-two-data-grid-field-data="pageTwoDataGridFieldData"
            :create-status="createStatus"
            :edit-status="editStatus"
            :delete-status="deleteStatus"
            :editing-row="editingRow"
            :page-one-data-grid-rows="pageOneDataGridRows"
            :tmp-cud="tmpCud"
            :modificable-for-data="modificableForData"
            :dialog-visible="dialogVisible">
    </single-grid-pms0810020-tmp>

    <field-multi-lang-dialog-tmp
            :sys_locales="sys_locales"
            :single-data="singleData">
    </field-multi-lang-dialog-tmp>

    <el-dialog title="產生庫存" :visible.sync="dialogRmTypeStockVisible" size="tiny" :show-close="false">
        <el-row>
            <el-col :span="12" :offset="6">
                <el-form>
                    <el-form-item label="開始日期">
                        <el-date-picker
                                v-model="value1"
                                type="date"
                                placeholder="选择日期"
                                :picker-options="pickerOptions0">
                        </el-date-picker>
                    </el-form-item>
                </el-form>
            </el-col>
        </el-row>

        <el-row>
            <el-col :span="12" :offset="6">
                <el-form>
                    <el-form-item label="開始日期">
                        <el-date-picker
                                v-model="value1"
                                type="date"
                                placeholder="选择日期"
                                :picker-options="pickerOptions0">
                        </el-date-picker>
                    </el-form-item>
                </el-form>
            </el-col>
        </el-row>
        <el-row>
            <el-col :span="12" :offset="6">
                <el-checkbox v-model="checked">一併重整庫存</el-checkbox>
            </el-col>
        </el-row>


        <div slot="footer" class="dialog-footer">
            <el-row>
                <el-col :span="12" :offset="3">
                    <el-button @click="dialogRmTypeStockVisible = false">取 消</el-button>
                    <el-button type="primary" @click="dialogRmTypeStockVisible = false">确 定</el-button>
                </el-col>
            </el-row>
        </div>

    </el-dialog>

    <el-dialog title="房型顯示排序" :visible.sync="dialogShowRoomSortVisible" size="tiny" :show-close="false">
        <template>
            <el-tabs v-model="activeName2" type="card" @tab-click="handleClick">
                <el-tab-pane label="ERP 順序" name="first">
                    <el-table
                            :data="tableData"
                            border
                            style="width: 100%">
                        <el-table-column
                                prop="date"
                                label="房型代號">
                        </el-table-column>
                        <el-table-column
                                prop="name"
                                label="房型名稱">
                        </el-table-column>
                        <el-table-column>
                            <button type="button" class="btn btn-default">
                                <span class="glyphicon glyphicon-triangle-top"></span> Search
                            </button>
                            <template scope="scope">
                                <el-button type="button" size="small" class="el-icon-caret-top">
                                </el-button>
                                <el-button type="button" size="small" class="el-icon-caret-bottom">
                                </el-button>
                            </template>
                        </el-table-column>
                    </el-table>
                </el-tab-pane>
                <el-tab-pane label="官網顯示順序" name="官網顯示順序">
                    <el-table
                            :data="tableData"
                            border
                            style="width: 100%">
                        <el-table-column
                                prop="date"
                                label="房型代號">
                        </el-table-column>
                        <el-table-column
                                prop="name"
                                label="房型名稱">
                        </el-table-column>
                        <el-table-column>
                            <template scope="scope">
                                <el-button type="button" size="small" class="el-icon-caret-top">
                                </el-button>
                                <el-button type="button" size="small" class="el-icon-caret-bottom">
                                </el-button>
                            </template>
                        </el-table-column>
                    </el-table>
                </el-tab-pane>
            </el-tabs>
            <div slot="footer" class="dialog-footer">
                <el-row>
                    <el-col :span="12" :offset="3">
                        <el-button @click="dialogShowRoomSortVisible = false">取 消</el-button>
                        <el-button type="primary" @click="dialogShowRoomSortVisible = false">确 定</el-button>
                    </el-col>
                </el-row>
            </div>
        </template>
    </el-dialog>

</div>

