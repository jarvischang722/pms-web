                    <%= __("BAC01P0140")["setup"] %>
                </a>
            </li>

            <li>
                <a href="/businessCompanyData" style="color:#FFFFFF;" >
                    <%= __("SystemCommon")["business"]%>
                </a>
            </li>
        </ul>
    </div> <!-- /.top-ul -->
    <!-- Quick menu  -->
    <div class="secondMenu-ul secondMenuClick">
        <ul>
            <li value="controlReservation" onclick="javascript:location.href='/manageSetting'">
                <img src="/images/icon/bed.png " class="icon-2-style">
