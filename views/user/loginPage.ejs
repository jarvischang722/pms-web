<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8"/>
    <title><%= __("SystemCommon").CompanyName %></title>
    <meta http-equiv="PRAGMA" CONTENT="NO-CACHE">
    <meta http-equiv="EXPIRES" CONTENT="0">
    <meta http-equiv="CACHE-CONTROL" CONTENT="NO-CACHE">
    <meta http-equiv="EXPIRES" CONTENT="Mon, 22 Jul 2002 11:12:01 GMT">
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0" />
</head>

<%- include ../common/cssFile/importFiles_CssBase %>
<%- include ../common/jsFile/importFiles_JsBase %>


<body class="login-bg" id="app">

<div class="loginPage" id="loginAPP">
    <div class="logoCompany">
        <img src="/images/athena_logo.png"/>
    </div>

    <div class="space-6"></div>
    <div class="login-container">
        <div class="col-sm-12 col-xs-12">
            <div class="row">
                <div class="title">
                    <!--icon-->
                    <i class="fa fa-user green"></i>

                    <span> <%= __("BAC01P0110")["login"] %></span>
                </div>
                <div class="main">
                    <form>
                        <div class="block input-icon input-icon-right">
                            <input class="form-control" v-model="username"
                                   placeholder="<%= __("BAC01P0110")["user"] %>"/>
                            <i class="ace-icon fa fa-user"></i>
                        </div>

                        <div class="block input-icon input-icon-right">
                            <input type="password" class="form-control" v-model="passwd"
                                   placeholder="<%= __("BAC01P0110")["passwd"] %>"/>
                            <i class="ace-icon fa fa-lock"></i>
                        </div>

                        <div>
                            <select class="form-control " v-model="comp_id">
                                <option v-for="company in companyData"
                                        :value="company.cmp_id.trim()">
                                    {{company.cmp_name}}
                                </option>
                            </select>
                        </div>

                        <!--     <div class="block input-icon input-icon-right">
                                <input type="text" class="form-control v_codes_input" placeholder="輸入驗證碼"/>
                                <span class="v_codes">
                                    <img src="/images/codes.jpg"/>
                                </span>
                            </div> -->
                        <div class="clearfix"></div>

                        <div class="mainCheck">
                            <label class="inline">
                                <input type="checkbox" class="ace" id="rememberMeCheck" v-model="rememberMeCheck"/>
                                <span class="lbl"> <%= __("BAC01P0110")["remember_me"] %></span>
                            </label>

                            <button type="button" id="login_btn" class="width-35 pull-right btn btn-sm btn-primary"
                                    @click="doLogin">
                                <span class="bigger-110">  <%= __("BAC01P0110")["login"] %></span>
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <div class="clearfix"></div>
    </div>
    <!--<div class="toolbar">-->
    <!--<div>-->
    <!--<a href="#" data-target="#forgot-box" class="forgot-password-link">-->
    <!--<%= __("BAC01P0110")["forget_pw"] %>-->
    <!--</a>-->
    <!--</div>-->

    <!--</div>-->
    <!-- 語言 -->
    <div class="navbar-fixed-top align-right lang">
        <select id="localeSelect" class="localeSelect" @change="changeLang()" v-model="currentLocale">
            <option v-for="locale in locales" :value="locale.lang">{{locale.name}}</option>
        </select>
    </div>
</div>
</body>

<!-- inline scripts related to this page -->
<script type="text/javascript">
    var gs_locale = '<%= session.locale %>';
    var gs_account = '<%= account %>';
</script>

<script src="/js/system/loginPage.js"></script>
</html>
